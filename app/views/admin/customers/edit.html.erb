<h3><%= @customer.last_name %> <%= @customer.first_name %>さんの会員情報編集</h3>

<p>会員ID<%= @customer.id %></p>

<%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
  <div class="field">
    <%= f.label :氏名 %>
    <%= f.text_field :last_name %>
    <%= f.text_field :first_name %>
  </div>
  
  <div class="field">
    <%= f.label :フリガナ %>
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %>
  </div>
  
  <div class="field">
    <%= f.label :郵便番号 %>
    <%= f.text_field :postal_code %>
  </div>
  
  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address %>
  </div>
  
  <div class="field">
    <%= f.label :電話番号 %>
    <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">
    
    <%= f.label :is_deleted,"会員ステータス" %>
    <%= f.radio_button :is_deleted, false %><%= f.label @customer.is_deleted, '有効' %><%= f.radio_button :is_deleted, true %><%= f.label @customer.is_deleted, '退会' %>
  </div>
  
    <%= f.submit "変更を保存", class: 'btn btn-success btn-md' %>
<% end %>