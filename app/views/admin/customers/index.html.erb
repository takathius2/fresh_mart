<h1>会員一覧</h1>
    
<div>
    <table>
        <thead>
            <tr>
                <th>会員ID</th>
                <th>氏名</th>
                <th>メールアドレス</th>
                <th>ステータス</th>
            </tr>
        </thead>
        <% @customers.each do |customer| %>
        <tbody>
            <tr>
                <td>
                    <%= customer.id %>
                </td>
                <td>
                    <%= link_to admin_customer_path(customer.id) do %>
                        <%= customer.first_name %><%= customer.last_name %>
                    <% end %>
                </td>
                <td>
                    <%= customer.email %>
                </td>
                <td>
                    <% if customer.is_deleted == false %>
                        <%= "有効" %>
                    <% else %>
                        <%= "無効" %>
                    <% end %>
                </td>
            </tr>
        </tbody>
        <% end %>
    </table>
</div>
<%= paginate @customers %>