<h1>管理者トップページ</h1>

<h3>注文履歴一覧</h3>
<table>
    <% @orders.each do |order| %>
    <table>
        <tr>
            <thead>
                <th>受注日</th>
                <th>注文依頼者</th>
                <th>注文個数</th>
            </thead>
        </tr>
        <tr>
            
        </tr>
            <tbody>
                <td>
                    <%= link_to admin_order_path(order.id) do %>
                        <%= order.created_at.strftime('%Y/%m/%d') %>
                    <% end %>
                </td>
                <td><%= order.customer.full_name %></td>
                <td><%= order.order_details.sum(:amount) %></td>
            </tbody>
        </tr>
    
    <% end %>
</table>
<%= paginate @orders %>