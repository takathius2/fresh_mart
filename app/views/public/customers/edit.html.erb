<h1>アカウントの情報編集</h1>

<div class="customer_information_edit" >
    <%= form_with model: @customer, url: public_customers_infomation_update_path, method: :patch do |f| %>
        <%= render "public/shared/error_messages", resource: @customer %>
        <table>
            <tr>
               <th>氏名</th>
            </tr>
            <tr>
                <th></th>
                <td>
                     <%= f.label :last_name,  "姓" %><%= f.text_field :first_name %>
                     <%= f.label :last_name_kana, "（セイ）" %><%= f.text_field :first_name_kana %>
                </td>
            </tr>
            <tr>
                <th></th>
               <td>
                   <%= f.label :first_name, "名" %><%= f.text_field :last_name %>
                   <%= f.label :first_name_kana, "（メイ）" %><%= f.text_field :last_name_kana %>
               </td>
            </tr>
            <tr>
                <th>メールアドレス</th><td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
            </tr>
            <tr>
                <th>郵便番号（ハイフン無し7桁・半角）</th><td><%= f.text_field :postal_code %></td>
            </tr>
            <tr>
                <th>住所</th><td><%= f.text_field :address %></td>
            </tr>
            <tr>
                <th>電話番号</th><td><%= f.text_field :telephone_number %></td>
            </tr>
        </table>
        <%= f.submit "変更を保存", class: 'btn btn-success btn-md' %>
    <% end %>
    <%= link_to "退会する", public_customers_unsubscribe_path, class: 'btn btn-info btn-md' %>
    
</div>