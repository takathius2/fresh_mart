<h3>注文履歴一覧</h3>

（全<%= @orders.count %>件）
<div class="order-index-container">
    <div class="order-index-row">
            <table>
                    <% @orders.each do |order| %>
                        <tr>
                            <th>注文日</th><td><%= l order.created_at %></td>
                        </tr>
                        <tr>
                            <th>配送先</th><td><%= order.delivery_name %>(<%= order.delivery_name_kana %>)</td>
                        </tr>
                            <th>注文詳細</th><td><%= link_to '表示する', public_order_path(order.id) %></td>
                    <% end %>
            </table>
    </div>
</div>
<%= paginate @orders %>